#include <iostream>
#include <thread>
#include <chrono>
#include <mutex>
#include <condition_variable>
#include <string>

std::condition_variable cv;

std::string str;

void read_string() {
    std::cin >> str;
    cv.notify_one();
}

int main() {
    std::cout << "Please enter your name: ";
    std::thread th(read_string);

    std::mutex mtx;
    std::unique_lock<std::mutex> lck(mtx);
    while (cv.wait_for(lck, std::chrono::seconds(5)) != std::cv_status::timeout) {
	std::cout << "\PLEASEEEE: ";
    }
    std::cout << "\n" << str << "\n";

    th.join();

    return 0;
}
