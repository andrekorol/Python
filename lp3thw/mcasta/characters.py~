from health_methods import *


class Character(object):
    def __init__(self, health, is_alive=True):
        self.health = health
        self.max_health = self.health
        self.is_alive = is_alive

    @classmethod
    def update_health(HealthMethods,
                      health_action,
                      health_points,
                      increase_max_health=False):
        HealthMethods().update_health(health_action, health_points,
                                      increase_max_health)

    def set_health(self, new_health):
        self.health_methods.set_health(new_health)
